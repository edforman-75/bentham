{
  "name": "@bentham/api-gateway",
  "version": "0.0.1",
  "description": "REST API gateway for Bentham",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts && tsup api/index.ts --outDir api --format esm",
    "build:vercel": "tsup src/index.ts --format cjs,esm --dts && tsup api/index.ts --outDir api --format esm",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@bentham/audit-logger": "workspace:*",
    "@bentham/core": "workspace:*",
    "@bentham/cost-tracker": "workspace:*",
    "@bentham/orchestrator": "workspace:*",
    "@bentham/validator": "workspace:*",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "fastify": "^4.28.1",
    "fastify-plugin": "^5.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vercel/node": "^3.0.0",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
