{
  "name": "@bentham/database",
  "version": "0.0.1",
  "private": true,
  "description": "Database schema, migrations, and repositories for Bentham",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js",
      "require": "./dist/client.cjs"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/client.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts src/client.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:unit": "vitest run src/__tests__/unit/",
    "test:regression": "vitest run src/__tests__/regression/",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset"
  },
  "dependencies": {
    "@bentham/core": "workspace:*",
    "@prisma/client": "^5.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prisma": "^5.7.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
