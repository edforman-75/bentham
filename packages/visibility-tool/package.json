{
  "name": "@bentham/visibility-tool",
  "version": "1.0.0",
  "description": "AI Visibility Assessment Tool - Analyze brand presence across AI surfaces",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "visibility-tool": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup src/cli.ts src/api.ts src/index.ts --format esm --dts --clean",
    "dev": "tsx src/cli.ts",
    "api": "tsx src/api.ts",
    "form": "open public/manifest-builder.html || xdg-open public/manifest-builder.html",
    "start": "node dist/cli.js",
    "start:api": "node dist/api.js",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "fastify": "^4.28.1",
    "openai": "^6.16.0",
    "playwright": "^1.57.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.6.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "ai",
    "visibility",
    "seo",
    "schema",
    "json-ld",
    "brand",
    "analysis"
  ],
  "engines": {
    "node": ">=20.0.0"
  }
}
